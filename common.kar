; -----------------------------------------------------------
; Functional stuff
; -----------------------------------------------------------

(def (repeat func times)
    (when (> times 0)
        (func)
        (repeat func (- times 1))))

; ------------------------------------------------------------                           
; Nice testing function
; ------------------------------------------------------------                           
(def (fib n)
    (cond [(= 0 n) 1]
          [(= 1 n) 1]
          [else (+ (fib (- n 1)) (fib (- n 2)))]))

(def (square n)
    (* n n))

