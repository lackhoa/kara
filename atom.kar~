; Atoms are like the mathematical sense of sets

; Implicit atom
(def (implicit pred)
     (tag 'Implicit pred))

; Explicit atom
(def (explicit set)
     (list 'Explicit set))

; The atom type
(def (atom? thing)
     (or (implicit? thing) (tagged? thing)))

(def (in-atom? x atom)
     (case atom
       [(Implicit pred) (pred x)]
       [(Explicit set)  (in-set? x set)]))




